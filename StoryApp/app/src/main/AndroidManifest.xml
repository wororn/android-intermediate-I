<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.wororn.storyapp">
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StoryApp"
        tools:targetApi="31">
        <activity
            android:name=".about.AboutActivity"
            android:exported="false"
            android:label="About"
            tools:ignore="Instantiatable"/>
        <activity
            android:name=".interfaces.setmodes.ModesActivity"
            android:exported="false"
            android:label="Dark Mode"
            tools:ignore="Instantiatable"/>
        <activity
            android:name=".interfaces.camera.CameraActivity"
            android:exported="false"
            android:label="Camera"
            tools:ignore="Instantiatable"/>
        <activity
            android:name=".interfaces.stories.DataStoriesActivity"
            android:exported="false"
            android:label="@string/data_stories"
            tools:ignore="Instantiatable"/>
        <activity
            android:name=".interfaces.login.LoginActivity"
            android:exported="false"
            android:label="@string/login"
            android:noHistory="true"
            tools:ignore="Instantiatable"/>
        <activity
            android:name=".interfaces.register.RegisterActivity"
            android:exported="false"
            android:label="@string/register"
            android:noHistory="true"
            tools:ignore="Instantiatable"/>
        <activity
            android:name=".interfaces.detail.DetailActivity"
            android:exported="false"
            android:label="Detail"
            tools:ignore="Instantiatable"/>
        <activity
            android:name=".interfaces.main.MainActivity"
            android:exported="false"
            android:label="MAIN"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".tools.SplashScreenActivity"
            android:exported="true"
            tools:ignore="MissingClass,Instantiatable">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>